<Window x:Class="WpEncoder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpEncoder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

            <RowDefinition></RowDefinition>
        
        </Grid.RowDefinitions>
        <Label Name="lblPath"></Label>
        <TextBox Grid.Row="1" Name="tbInput"></TextBox>
        <Button Grid.Row="2" Click="Button_Click">Open</Button>
        <Button Grid.Row="3" Click="Button_Click_1">Enocode</Button>
        <Button Grid.Row="4" Click="Button_Click_2">Decipher</Button>

    </Grid>
</Window>
